{
  "name": "mealprep360-recipe-service",
  "version": "1.0.0",
  "description": "Recipe generation and management service for MealPrep360",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "validate": "ts-node src/scripts/runValidation.ts",
    "worker": "ts-node src/workers/start.ts",
    "worker:prod": "node dist/workers/start.js",
    "recipe-worker": "ts-node src/workers/startRecipeWorker.ts",
    "recipe-worker:prod": "node dist/workers/startRecipeWorker.js",
    "worker:all": "ts-node src/workers/startAll.ts",
    "worker:all:prod": "node dist/workers/startAll.js",
    "test:recipe": "node test-recipe-generation.js",
    "init-phase7": "node scripts/init-phase7-simple.cjs"
  },
  "dependencies": {
    "@upstash/redis": "^1.35.0",
    "@vercel/node": "^3.0.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "redis": "^5.5.6",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.19.1",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "package.json",
    "tsconfig.json"
  ]
}
