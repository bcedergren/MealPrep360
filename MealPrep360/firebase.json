{
	"hosting": {
		"public": "out",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
	},
	"storage": {
		"rules": "storage.rules"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"source": "functions",
		"predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
	},
	"emulators": {
		"functions": {
			"port": 5002
		},
		"firestore": {
			"port": 8081
		},
		"ui": {
			"enabled": true,
			"port": 4002
		},
		"hub": {
			"port": 4402
		},
		"logging": {
			"port": 4502
		}
	}
}
