# ==========================================
# MealPrep360 Environment Configuration
# ==========================================

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
PORT=3000

# ==========================================
# Database Configuration
# ==========================================
MONGODB_URI=mongodb://localhost:27017/mealprep360_prod
REDIS_URL=redis://localhost:6379

# ==========================================
# Authentication (Clerk)
# ==========================================
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# ==========================================
# Payment Processing (Stripe)
# ==========================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ==========================================
# AI Services
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==========================================
# External APIs
# ==========================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# ==========================================
# Email Services
# ==========================================
RESEND_API_KEY=your_resend_api_key_here
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# ==========================================
# Service API Keys (Internal Communication)
# ==========================================
RECIPE_SERVICE_API_KEY=your_recipe_service_api_key_here
MEALPLAN_SERVICE_API_KEY=your_mealplan_service_api_key_here
SHOPPING_SERVICE_API_KEY=your_shopping_service_api_key_here
SOCIAL_SERVICE_API_KEY=your_social_service_api_key_here
BLOG_SERVICE_API_KEY=your_blog_service_api_key_here
WEBSOCKET_SERVICE_API_KEY=your_websocket_service_api_key_here

# ==========================================
# Monitoring & Observability
# ==========================================
GRAFANA_PASSWORD=your_grafana_password_here
PROMETHEUS_RETENTION_TIME=200h

# ==========================================
# MongoDB Configuration (Production)
# ==========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_mongo_root_password_here

# ==========================================
# Frontend Configuration
# ==========================================
NEXT_PUBLIC_API_URL=https://api.mealprep360.com
NEXT_PUBLIC_WS_URL=wss://ws.mealprep360.com
NEXT_PUBLIC_APP_URL=https://mealprep360.com

# ==========================================
# Security
# ==========================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# ==========================================
# File Upload & Storage
# ==========================================
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGIN=https://mealprep360.com,https://admin.mealprep360.com
CORS_CREDENTIALS=true

# ==========================================
# Feature Flags
# ==========================================
ENABLE_AI_RECIPE_GENERATION=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_BLOG_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true

# ==========================================
# Development & Debugging
# ==========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
